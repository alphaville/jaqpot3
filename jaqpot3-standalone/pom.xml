<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jaqpot3</artifactId>
        <groupId>org.opentox</groupId>
        <version>3.0</version>
        <relativePath>../</relativePath>
    </parent>
    <groupId>org.opentox</groupId>
    <artifactId>jaqpot3-standalone</artifactId>
    <version>3.0-SNAPSHOT</version>
    <name>jaqpot3-standalone</name>
    <url>http://maven.apache.org</url>


    <dependencies>
        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet</artifactId>
            <version>2.0-M7</version>
        </dependency>
        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet.ext.grizzly</artifactId>
            <version>2.0-M7</version>
        </dependency>
        <dependency>
            <groupId>org.restlet.jse</groupId>
            <artifactId>org.restlet.ext.wadl</artifactId>
            <version>2.0-M7</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>jaqpot</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <jaqpot_domain>localhost</jaqpot_domain>
            </properties>
        </profile>
    </profiles>
